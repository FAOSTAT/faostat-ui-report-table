<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        {{#each header}}
            <!--Key: {{@key}}-->
            <tr>
                {{#each this}}
                    <th rowspan="{{this.RowSpan}}" colspan="{{this.ColSpan}}"> {{this.Label}}</th>
                {{/each}}
            </tr>
        {{/each}}
        </thead>
        <tbody>
        {{#each rows}}
            <!-- TODO: remove it from here the style? -->
            {{#if rowShade}}
                <tr class="info">
            {{else}}
                <tr>
            {{/if}}
            {{#each data}}
                    <td>{{this}}</td>
            {{/each}}
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>